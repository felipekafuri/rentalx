{
  "openapi": "3.0.0",
  "info": {
    "title": "Rentalx Documentation",
    "description": "This is an api for rentalx",
    "version": "1.0.0",
    "contact":{
      "email": "felipe11.rk@gmail.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Categories"],
        "summary": "Create a category",
        "description": "Create a new category and save on database",
        "requestBody": {
          "content":{
            "application/json":{
              "schema":{
                "type":"object",
                "properties":{
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "SUV",
                  "description":"Brand new car SUV category"
                }
              }
            }
          }
        },
        "responses":{
          "201": {
            "description": "Created"
          },
          "400":{
            "description":"Bad Request"
          }
        }
      },
      "get":{
        "tags": ["Categories"],
        "summary": "List all categories",
        "description":"List all categories",
        "responses": {
          "200":{
            "description": "Success",
            "content":{
              "application/json":{
                "schema": {
                  "type": "array",
                  "items":{
                    "type": "object",
                    "properties":{
                      "name": {
                        "type":"string"
                      },
                      "description": {
                        "type": "string"
                      }

                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
